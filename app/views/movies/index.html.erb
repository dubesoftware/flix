<h1>Movies</h1>

<ul>
<% @movies.each do |m| %>
	 <li>
		 <strong><%= m.title %></strong> (<%= m.rating %>): <%= number_to_currency(m.total_gross, precision: 0) %>
	 </li>
	 <p>
	   <%= truncate(m.description, length: 40, separator: ' ') %>
	 </p>
	 <p>
	   <%= m.released_on %>
	 </p>
<% end %>
</ul>